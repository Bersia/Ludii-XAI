<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.1">
    <persistence-unit name="PersistenceUnit">
        <class>model.GameTrialData</class>
        <class>model.ContextData</class>
        <class>other.context.Context</class>
        <class>other.move.Move</class>
<!--        <class>other.IntArrayFromRegion</class>-->
<!--        <class>search.mcts.nodes.BaseNode</class>-->
        <class>search.mcts.nodes.OpenLoopNode</class>
        <class>game.Game</class>
        <class>game.equipment.Equipment</class>
        <class>game.equipment.container.Container</class>
<!--        <class>main.collections.FastArrayList</class>-->
        <properties>
            <!-- Database connection -->
            <property name="javax.jdo.option.ConnectionURL" value="jdbc:h2:./database/mydb" />
            <property name="javax.jdo.option.ConnectionDriverName" value="org.h2.Driver" />
            <property name="javax.jdo.option.ConnectionUserName" value="sa" />
            <property name="javax.jdo.option.ConnectionPassword" value="" />

            <!-- Schema auto-creation -->
<!--            <property name="datanucleus.schema.autoCreateAll" value="true"/>-->
            <property name="datanucleus.schema.autoCreateTables" value="true" />
            <property name="datanucleus.schema.autoCreateColumns" value="true" />
<!--            <property name="datanucleus.schema.autoCreateConstraints" value="true" />-->

            <!-- Logging for debugging -->
<!--            <property name="datanucleus.debug.level" value="DEBUG" />-->
        </properties>
    </persistence-unit>
</persistence>
